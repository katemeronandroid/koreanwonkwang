<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emarkova.koreanwonkwang">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activities.ActivityLesson"/>
        <activity android:name=".presentation.activities.ActivityTest"/>
        <activity android:name=".presentation.activities.ActivityExercise"/>
        <activity android:name=".presentation.activities.ActivityTranslate"/>
        <activity android:name=".presentation.activities.ActivitySettings"/>
        <activity android:name=".presentation.activities.ActivityVocabulary"/>
        <activity android:name=".presentation.activities.ActivityAchievement"/>

        <service
            android:name=".MyIntentService"
            android:exported="false"></service>
    </application>

</manifest>