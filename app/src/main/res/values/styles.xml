<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/toolbar_color</item>
    </style>

    <style name="AlertCorrect" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/holo_green_light</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/holo_green_light</item>
    </style>

    <style name="AlertWrong" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/holo_red_light</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/holo_red_light</item>
    </style>


</resources>
